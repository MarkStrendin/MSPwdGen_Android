<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="5dp"
        android:inputType="textNoSuggestions" />    
    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_generate"
		android:layout_margin="5dp"
        android:textSize="20dp" />    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
		android:layout_margin="5dp"
		android:layout_marginBottom="0dp"
        android:text="@string/label_alphaonly"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/txtOutput_Alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:gravity="top"
		android:layout_margin="5dp"
		android:layout_marginBottom="0dp"
        android:inputType="textNoSuggestions" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:layout_marginTop="0dp"
        android:gravity="center" >
        
        <Button
            android:id="@+id/btnAlphaSel8"
            style="@style/CharacterButton"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_8" />
        
        <Button
            android:id="@+id/btnAlphaSel12"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_12" />
        
        <Button
            android:id="@+id/btnAlphaSel15"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_15" />
        
        <Button
            android:id="@+id/btnAlphaSel20"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_20" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
		android:layout_margin="5dp"
		android:layout_marginBottom="0dp"
        android:text="@string/label_specialchars"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/txtOutput_Special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:gravity="top"
		android:layout_margin="5dp"
		android:layout_marginBottom="0dp"
        android:inputType="textNoSuggestions" />
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:layout_marginBottom="0dp"
        android:gravity="center" >
        
        <Button
            android:id="@+id/btnSpecialSel8"
            style="@style/CharacterButton"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_8" />
        
        <Button
            android:id="@+id/btnSpecialSel12"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_12" />
        
        <Button
            android:id="@+id/btnSpecialSel15"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_15" />
        
        <Button
            android:id="@+id/btnSpecialSel20"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
        	android:enabled="false"
            android:text="@string/button_gen_20" />

    </LinearLayout>
    <Button
        android:id="@+id/btnOpenSaltDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:text="@string/button_managekey" />

</LinearLayout>